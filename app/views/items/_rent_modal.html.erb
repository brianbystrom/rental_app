<%= form_with model: rental, url: rentals_path(item_id: @item.id), :remote => true do |form| %>

<div class="form-group row">
    <%= form.label "Rental Start Date:", :class => "col-4 col-form-label" %>
    <div class="col-8">
      <%= form.date_select :rental_start_date, :order => [ :month, :day, :year ], :use_two_digit_numbers => true, :class => "form-control" %>
    </div>
</div>
<div class="form-group row">
    <%= form.label "Rental End Date:", :class => "col-4 col-form-label" %>
    <div class="col-8">
      <%= form.date_select :rental_end_date, :order => [ :month, :day, :year ], :use_two_digit_numbers => true, :class => "form-control" %>
    </div>
</div>
<div class="form-group row">
    <%= form.label "$/Day", :class => "col-4 col-form-label" %>
    <div class="col-8">
      $<span id="price-per-day"><%= @item.price %></span>
    </div>
</div>
<div class="form-group row">
  <%= form.label "Total Price:", :class => "col-4 col-form-label" %>
  <div class="col-8">
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text">$</span>
        </div>
        <input type="text" class="form-control" id="total-price" value="<%= @item.price %>" aria-label="Amount (to the nearest dollar)">
      </div>
  </div>
</div>
<div class="form-group row">
    <%= form.label "Need Assistance?:", :class => "col-4 col-form-label" %>
    <div class="col-1">
      <%= form.check_box :assistance, :class => "form-control" %>
    </div>
    <div class="col-7">
      <select class="form-control" id="assistance_reason" name="assistance_reason">
        <option value="">Select reason for assistance</option>
        <option value="Setup">Setup</option>
        <option value="Usage">Usage</option>
      </select>
    </div>
</div>
<div class="form-group row">
    <%= form.label "Comment:", :class => "col-4 col-form-label" %>
    <div class="col-8">
      <%= form.text_area :comment, :class => "form-control" %>
    </div>
</div>
<div class="actions">
    <%= form.submit "Rent Item", :class => "btn btn-info post-item-btn" %>
</div>
<% end %>