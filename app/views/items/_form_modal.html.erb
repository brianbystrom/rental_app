<%= form_with url: items_path do |form| %>

<div class="form-group row">
    <%= form.label "Name:", :class => "col-2 col-form-label" %>
    <div class="col-10">
      <%= form.text_field :name, :class => "form-control", :required => true %>
    </div>
</div>
<div class="form-group row">
    <%= form.label "Description:", :class => "col-2 col-form-label" %>
    <div class="col-10">
      <%= form.text_area :description, :class => "form-control", :required => true %>
    </div>
</div>
<div class="form-group row">
    <%= form.label "Serial #:", :class => "col-2 col-form-label" %>
    <div class="col-10">
      <%= form.text_field :serial_no, :class => "form-control", :required => true %>
    </div>
</div>
<div class="form-group row">
    <%= form.label "Tags:", :class => "col-2 col-form-label" %>
    <div class="col-10">
      <%= form.text_field :tag, :class => "form-control", :required => true %>
    </div>
</div>
<div class="form-group row">
    <%= form.label "Price:", :class => "col-2 col-form-label" %>
    <div class="col-10">
      <input name="price" class="form-control" pattern="^[0-9]*\.[0-9]{2}$" required />
    </div>
</div>
<div class="form-group row">
    <%= form.label "Brand:", :class => "col-2 col-form-label" %>
    <div class="col-10">
      <%= form.text_field :brand, :class => "form-control", :required => true %>
    </div>
</div>
<div class="form-group row">
    <%= form.label "Model:", :class => "col-2 col-form-label" %>
    <div class="col-10">
      <%= form.text_field :model, :class => "form-control", :required => true %>
    </div>
</div>
<div class="form-group row">
    <%= form.label "Images:", :class => "col-2 col-form-label" %>
    <div class="col-10">
      <%= form.file_field :images, multiple: true, :required => true %>
    </div>
</div>
<div class="actions">
    <%= form.submit "Post Item", :class => "btn btn-info post-item-btn" %>
</div>
<% end %>