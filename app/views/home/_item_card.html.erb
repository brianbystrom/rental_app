<div class="col-md-3">
  <div class="card mb-3 shadow-sm">
    <%= image_tag("placeholder.svg", class: "card-img-top") %>
    <div class="card-body">
        <h4><%= item.name %></h4>
      <p class="card-text"><%= item.brand %> - <%= item.model %></p>
      <p class="card-text"><%= item.description %></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
            <%= button_to "View", {:controller => :items, :action => 'show', :id => item.id }, :method => :get, :class => "btn btn-sm btn-outline-secondary" %>
        </div>
        <small class="text-muted">$<%= item.price %></small>
      </div>
    </div>
  </div>
</div>